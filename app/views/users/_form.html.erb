<div class='well'>
  <%= render 'shared/errors', model_obj: @user %>
  <%= form_for @user do |f| %>
    <div class='control-group'>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class='control-group'>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class='control-group'>
      <%= f.label :timezone %>
      <%= f.time_zone_select :timezone, nil, include_blank: true, default: 'UTC' %>
    </div>
    <%= f.submit @user.new_record? ? "Register" : "Save Profile", class: 'btn btn-primary'%>
  <% end %>
</div>

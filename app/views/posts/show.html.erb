<p class='pull-right'>
  [<%= link_to 'Edit this post', edit_post_path(@post) %>]
</p>

<%= render 'shared/content_title', title: link_to(@post.title, @post.url) %>

<p>
  <%= render @post.categories %>
</p>

<p><%= @post.description %></p>
<hr/>

<p>By: <%= @post.creator.username %></p>
<p><%= link_to 'Back', posts_path %></p>

<% if @comment.errors.any? %>
  <div class='alert alert-error'>
    <ol>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ol>
  </div>
<% end %>
<%= form_for [@post, @comment] do |f| %>
  <strong><%= f.label :body, "New Comment:" %></strong>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Add', class: 'btn btn-small btn-primary' %>
<% end %>

<h4>Previous Comments:</h4>
<% @post.comments.each do |comment| %>
  <div class='span8 well well-small'>
    <p><%= comment.body %></p>
    <p>
      <%= render 'shared/footer', item: comment %>
    </p>
  </div>
<% end %>

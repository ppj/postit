<% if @post.errors.any? %>
  <div class='alert alert-error'>
    <h5>Encountered error(s) trying to save/udpate post:</h5>
    <ol>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ol>
  </div>
<% end %>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :url %>
  <%= f.text_field :url %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <br>
  <%= f.submit class: 'btn btn-primary'%>

<% end %>

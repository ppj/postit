<div class='well'>
  <%= render 'shared/errors', model_obj: @post %>
  <%= form_for @post do |f| %>
    <div class='control-group'>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class='control-group'>
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>
    <div class='control-group'>
      <%= f.label :description %>
      <%= f.text_area :description, rows: 4 %>
    </div>
    <br/>
    <div class='control-group'>
      <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) %>
    </div>
    <%= f.submit class: 'btn btn-primary'%>
  <% end %>
</div>
